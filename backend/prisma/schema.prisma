datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


generator client {
  provider = "prisma-client-js"
}

model User {
  id        Int             @id @default(autoincrement())
  email     String          @unique
  password  String
  name      String?
  createdAt DateTime        @default(now())

  history   QueryHistory[]
}

model QueryHistory {
  id        Int       @id @default(autoincrement())
  query     String
  status    String
  type      String?
  message   String?

  userId    Int?
  user      User?     @relation(fields: [userId], references: [id])

  createdAt DateTime  @default(now())
}